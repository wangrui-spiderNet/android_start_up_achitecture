<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <shape>
            <corners android:radius="5.0dp"/>
            <gradient
                android:angle="270.0"
                android:centerColor="#bbbbbc"
                android:centerY="0.75"
                android:endColor="#dbdedf"
                android:startColor="#dacedf"/>
        </shape>

    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>
            <shape>
                <corners android:radius="6.0dp"/>
                <gradient
                    android:angle="90.0"
                    android:centerColor="#3C78FF"
                    android:centerY="0.75"
                    android:endColor="#3C78FF"
                    android:startColor="#3E7BFF"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="6.0dp"/>
                <gradient
                    android:angle="270.0"
                    android:endColor="#3C78FF"
                    android:startColor="#3E7BFF"/>
            </shape>
        </clip>
    </item>
</layer-list>
