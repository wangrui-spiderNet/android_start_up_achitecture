<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>


    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/toolbar_title_color_red</item>
    </style>

    <!--activity设置全屏-->
    <style name="Theme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>

    </style>

    <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>


    <!-- 设置全局的用户头像大小尺寸 -->
    <style name="head_size_50">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="head_size_40">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="head_size_45">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="head_size_24">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="head_size_35">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- 纵向wrap -->
    <style name="match_wrap" parent="match_match">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="popup_animation">
        <item name="android:windowEnterAnimation">@anim/shadow_enter</item>
        <item name="android:windowExitAnimation">@anim/shadow_exit</item>
    </style>

    <!-- 自定义对话框 -->
    <style name="MyLoadingDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LoadingProgressBarStyle" parent="android:Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_loading</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>


    <style name="image_no_data1">
        <item name="android:layout_width">101dp</item>
        <item name="android:layout_height">121dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="AppNoTitle">
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置全屏 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="translucent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="ActivityAnim" parent="android:Animation">
        <item name="@android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="@android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="@android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="@android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>


    <style name="AlertDlgStyle">
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:maxLines">10</item>
        <item name="android:scrollHorizontally">false</item>
    </style>


    <!-- 自定义对话框 -->
    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>


    <style name="tab_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_smallest11sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>


    <style name="tab_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
